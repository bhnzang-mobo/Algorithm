{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build",
        "command": "C:\\MinGW\\bin\\gcc.exe",
        "args": [
          "-Wl,--stack,16777216", //32MB for 33554432
          "-g",
          "${fileDirname}\\*.c",
          "-o",
          "${fileDirname}\\test.exe"
        ],
        "options": {
          "cwd": "C:\\MinGW\\bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "Build/CPP",
        "command": "C:\\MinGW\\bin\\g++.exe",
        "args": [
          "-Wl,--stack,16777216", //32MB for 33554432
          "-g",
          "${fileDirname}\\*.cpp",
          "-o",
          "${fileDirname}\\test.exe"
        ],
        "options": {
          "cwd": "C:\\MinGW\\bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build"
      },
        {
            "type": "shell",
            "label": "Test Execute",
            "command": "test.exe",
            "group": "test"
        }
    ]
}